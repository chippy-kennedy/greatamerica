<div class="row">

	<div class="col-md-6 titlepane">
		When Donald Trump Makes America Great Again, </br>What Will Your New Job Be?
	</div>
</div>

<div id="yo">
	
</div>

<div class="row" id="form">
	<div class="col-md-8 form">
		<form  id="the_id">
			<div class="form-group">
				<input type="name" class="form-control" id="exampleInputName" placeholder="First Name">
			</div>
			<div class="form-group">
				<input type="name" class="form-control" id="exampleInputName" placeholder="Last Name">
			</div>
			<div class="form-group">
				<input type="name" class="form-control" id="exampleInputText" placeholder="Current Occupation">
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-default">Let's Make America Great Again!</button>
			</div>
		</form>
	</div>
</div>

<script type="text/javascript">

	$(function (){
		$('form').submit(function(e){
			e.preventDefault();

			$.ajax({
				url:'/job',
				type: 'POST',
				data: $(this).serialize(),
				dataType: 'html',
				success: function(result) {
					$('form').hide();
					$('#yo').html(result);
					console.log('DATA' + result);
				}
			});
		});
	});

</script>
