<div class="row">

	<div class="col-md-6 titlepane"><h1>
		When Donald Trump Makes America Great Again, </br>What Will Your New Job Be?
		</h1></div>
</div>

<div class="row" id="form-row">

	<!-- Response (Starts Hidden) -->
	<div class="col-md-6" id="res-col">
	
	</div>
	
	<!-- Form (Starts Showing) -->
	<div class="col-md-8" id="form-col">
		<form  id="form">
			<div class="form-group">
				<input type="name" class="form-control" id="exampleInputName" placeholder="First Name">
			</div>
			<div class="form-group">
				<input type="name" class="form-control" id="exampleInputName" placeholder="Last Name">
			</div>
			<div class="form-group">
				<input type="name" class="form-control" id="exampleInputText" placeholder="Current Occupation">
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-default">Let's Make America Great Again!</button>
			</div>
		</form>
	</div>
</div>

<script type="text/javascript">

	$(function (){
		$('#form').submit(function(e){
			e.preventDefault();

			var $inputs = $("input:first").val();

			$.ajax({
				url:'/job',
				type: 'POST',
				data: $(this).serialize(),
				dataType: 'html',
				success: function(result) {
					$('#form-col').hide();
					$('#res-col').html(result);
				}
			});
		});
	});

</script>
